<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Patient | PneumoCare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/patient.css" />
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg sticky-top">
    <div class="container">
      <a class="navbar-brand fw-bold text-success" href="/">PneumoCare</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link active" href="/add">Add Patient</a></li>
          <li class="nav-item"><a class="nav-link" href="/reports">View Reports</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Section -->
  <section class="add-section">
    <div class="container form-container">
      <h1 class="text-center mb-4">Add Patient Details</h1>

      <% if (error) { %>
        <div class="alert alert-danger text-center"><%= error %></div>
      <% } %>

      <form action="/add" method="POST" class="row g-3">
        <div class="col-md-6">
          <label for="name" class="form-label">Patient Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" placeholder="Enter patient name" />
        </div>

        <div class="col-md-6">
          <label for="age" class="form-label">Age</label>
          <input type="number" class="form-control" id="age" name="age" value="<%= typeof age !== 'undefined' ? age : '' %>" placeholder="Enter age" />
        </div>

        <div class="col-md-6">
          <label for="wbc" class="form-label">WBC Count</label>
          <input type="number" class="form-control" id="wbc" name="wbc" value="<%= typeof wbc !== 'undefined' ? wbc : '' %>" placeholder="Enter WBC count" />
        </div>

        <div class="col-md-6">
          <label for="neutrophil" class="form-label">Neutrophils (%)</label>
          <input type="number" class="form-control" id="neutrophil" name="neutrophil" value="<%= typeof neutrophil !== 'undefined' ? neutrophil : '' %>" placeholder="Enter Neutrophils %" />
        </div>

        <div class="col-md-6">
          <label for="crp" class="form-label">CRP Level (mg/L)</label>
          <input type="number" class="form-control" id="crp" name="crp" value="<%= typeof crp !== 'undefined' ? crp : '' %>" placeholder="Enter CRP level" />
        </div>

        <div class="col-md-6">
          <label for="oxygen" class="form-label">Oxygen Level (%)</label>
          <input type="number" class="form-control" id="oxygen" name="oxygen" value="<%= typeof oxygen !== 'undefined' ? oxygen : '' %>" placeholder="Enter Oxygen level" />
        </div>

        <div class="col-12 text-center mt-4">
          <button type="submit" class="btn btn-primary px-5 py-2">Submit</button>
        </div>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <p>&copy; 2025 PneumoCare | All Rights Reserved</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
